{
  "name": "vscode-git-summary",
  "displayName": "Git Summary",
  "description": "Shows the number of git changed lines in the status bar",
  "version": "0.0.5",
  "type": "module",
  "publisher": "halodong",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/halodong/vscode-git-summary"
  },
  "bugs": {
    "url": "https://github.com/halodong/vscode-git-summary/issues"
  },
  "engines": {
    "vscode": "^1.32.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "rollup -c",
    "lint": "eslint . --ext .ts,.tsx",
    "watch": "rollup -cw --environment TARGET:src"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@types/node": "^18.11.3",
    "@types/vscode": "^1.32.0",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "eslint": "^8.13.0",
    "rollup": "^3.2.5",
    "rollup-plugin-typescript2": "^0.34.1",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "gitdiff-parser": "^0.2.2"
  },
  "activationEvents": [
    "onCommand:git-summary.refresh",
    "onCommand:git-summary.reveal"
  ],
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "git-summary",
          "name": "GitSummary",
          "icon": "resources/logo.svg",
          "contextualTitle": "Git Summary"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "git-summary.refresh",
          "when": "view == git-summary",
          "group": "navigation"
        }
      ]
    },
    "commands": [
      {
        "command": "git-summary.refresh",
        "title": "Refresh",
        "category": "git-summary",
        "icon": {
          "dark": "resources/icons/dark/refresh.svg",
          "light": "resources/icons/light/refresh.svg"
        }
      }
    ],
    "configuration": {
      "type": "object",
      "title": "git-sumamry configuration",
      "properties": {
        "git-summary.rootFolder": {
          "type": "string",
          "description": "Folder in which to run the search (defaults to the workspace folder)",
          "default": ""
        }
      }
    }
  }
}
