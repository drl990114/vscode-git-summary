{
	"compilerOptions": {
		"target": "es2017",
    "module": "CommonJS",
    "lib": ["esnext","DOM"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
		"outDir": "out",
		"sourceMap": true,
		"rootDir": "src"
	},
  "exclude": ["node_modules"]
}
